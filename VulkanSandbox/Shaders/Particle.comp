#version 450
layout (local_size_x = 1) in;
struct Particle { vec3 position; vec3 velocity; };
layout (set = 0, binding = 0) buffer ParticleBuffer { Particle particles[]; };
layout (set = 0, binding = 1) uniform ComputeInfo { float deltaTime; };
void main() {
	uint i = gl_GlobalInvocationID.x;
	particles[i].position += deltaTime * particles[i].velocity;
}
